<%- include('../partials/header') %>

<section id="show-page">
<div>Flight airport:</div>
<div><%= flight.airport %></div>
<div>Airline:</div>
<div><%= flight.airline %></div>
<div>Flight Number:</div>
<div><%= flight.flightNo %></div>
<div>Departure:</div>
<div><%= flight.departure %></div>
</section>
<br></br>
<h2>Add Destination</h2>
<form id="add-destinations-form" method="POST" action="/flights/<%= flight._id %>/destinations">
  <label>Arrival:
    <input type="datetime-local" name="arrival"
   name="meeting-time" value="2021-06-12T19:30"
   min="1990-06-07T00:00" max="2040-06-14T00:00">
</label><br>
  <label>Airport:</label>
  <select name="airport">
    <option value="AUS">AUS</option>
    <option value="DFW">DFW</option>
    <option value="DEN">DEN</option>
    <option value="LAX">LAX</option>
    <option value="SAN">SAN</option>
  </select>
  <input type="submit" value="Add Destination">
</form>
<% if (flight.destinations.length) { %>
  <table>
    <thead>
      <tr>
        <th>Airport</th>
        <th>Arrival</th>
      </tr>
    </thead>
    <tbody>
      <% let total = 0 %>
      <% flight.destinations.forEach(function(d) { %>
        <% total += d.airport %>
        <tr>
          <td><%= d.airport %></td>
          <td><%= d.arrival %></td>
        </tr>
      <% }); %>
      <tr>
        <td colspan="2"></td>
        <td><strong><%= (total / flight.destinations.length).toFixed(1) %></strong></td>
      </tr>
    </tbody>
  </table>
<% } else { %>
  <h5>No Additional Flights</h5>
<% } %>



<%- include('../partials/footer') %>