<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <title>Mongoose Flights</title>
</head>
<body>
    <body>
        <h1>Flight List</h1>
        <table>
          <thead>
            <tr>
              <th>Airline</th>
              <th>Airport</th>
              <th>Flight Number</th>
              <th>Departure</th>
            </tr>
          </thead>
          <tbody>
            <% flights.forEach(function(m) { %>
            <!-- Write the line of EJS to iterate over movies using forEach -->
              <tr>
                <td><%= m.airline %></td>
                <td><%= m.airport %></td>
                <td><%= m.flightNumber %></td>
                <td><%= m.departure %></td>
                <!-- finish the ternary expression to display
                             'Yes' or 'Nope' --> 
              </tr>
            <!-- Close the forEach using EJS here -->
          </tbody>
        </table>
    
</body>
</html>